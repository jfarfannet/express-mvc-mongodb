<div class="form-container">
    <h2>Editar Usuario</h2>
    
    {{#if error}}
    <div class="alert alert-error">
        ‚ö†Ô∏è {{error}}
    </div>
    {{/if}}
    
    <form action="/usuarios/{{usuario._id}}?_method=PUT" method="POST" class="product-form">
        <div class="form-group">
            <label for="username">Username:</label>
            <input 
                type="text" 
                id="username" 
                name="username" 
                value="{{usuario.username}}"
                required
                minlength="3">
        </div>
        
        <div class="form-group">
            <label for="correo">Correo Electr√≥nico:</label>
            <input 
                type="email" 
                id="correo" 
                name="correo" 
                value="{{usuario.correo}}"
                required>
        </div>
        
        <div class="form-group">
            <label for="password">Password:</label>
            <input 
                type="password" 
                id="password" 
                name="password" 
                value="{{usuario.password}}"
                required
                minlength="6">
            <small style="color: #666;">Modifica el password si deseas cambiarlo</small>
        </div>
        
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">üíæ Actualizar</button>
            <a href="/usuarios" class="btn btn-secondary">‚ùå Cancelar</a>
        </div>
    </form>
</div>