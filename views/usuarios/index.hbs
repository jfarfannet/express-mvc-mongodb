<div class="header-section">
    <h2>👥 Lista de Usuarios</h2>
    <a href="/usuarios/nuevo" class="btn btn-primary">➕ Nuevo Usuario</a>
</div>

{{#if estadisticas}}
<div class="stats">
    <div class="stat-card">
        <h3>Total Usuarios</h3>
        <p class="stat-number">{{estadisticas.total}}</p>
    </div>
</div>
{{/if}}

{{#if usuarios.length}}
<table class="product-table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Correo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {{#each usuarios}}
        <tr>
            <td>{{this.username}}</td>
            <td>{{this.correo}}</td>
            <td class="actions">
                <a href="/usuarios/{{this._id}}/editar" class="btn btn-small btn-secondary">✏️ Editar</a>
                <form action="/usuarios/{{this._id}}?_method=DELETE" method="POST" style="display: inline;" onsubmit="return confirm('¿Estás seguro de eliminar este usuario?')">
                    <button type="submit" class="btn btn-small btn-danger">🗑️ Eliminar</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<div class="empty-state">
    <p>👤 No hay usuarios registrados</p>
    <a href="/usuarios/nuevo" class="btn btn-primary">Agregar el primero</a>
</div>
{{/if}}